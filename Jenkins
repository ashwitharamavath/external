pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build') {
            steps {
                echo "Compiling Java Program..."
                bat 'javac Main.java'
            }
        }

        stage('Run') {
            steps {
                echo "Running Java Program..."
                bat 'java Main'
            }
        }
    }
}
